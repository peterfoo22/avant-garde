<% campaign.reviews.each do |review| %>
         <div>
          <!-- Question -->
          <div class="border-bottom pb-6 mb-6" >

            <div class="media align-items-center mb-2"t>
                  <div class="u-avatar mr-3">
                    <img class="img-fluid rounded-circle" src="<%= review.image_url %>" alt="Image Description">
                  </div>
              <div class="media-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="h6 font-weight-medium mb-0"><%= review.username %></span>
                    <small class="text-muted"><%= time_ago_in_words(review.created_at)%> ago</small>
                  </div>
              </div>

           </div>

            <p><%= review.content %></p>

           <ul class="list-inline d-flex">
            <li class="list-inline-item">
              <a class="text-secondary" href="#">
                17
                <span class="far fa-thumbs-up ml-1"></span>
              </a>
            </li>
            <li class="list-inline-item ml-3">
              <a class="text-secondary" href="#">
                0
                <span class="far fa-thumbs-down ml-1"></span>
              </a>
            </li>

          </ul>

          <% if ! review.answer.blank? %>
            <!-- Reply -->
            <div class="card bg-light p-3 mt-4 ml-5">
              <div class="media align-items-center mb-2">
                <div class="u-avatar mr-3">
                  <img class="img-fluid rounded-circle" src="<%= @images[0].photo %>" alt="Image Description">
                </div>
                <div class="media-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="h6 font-weight-medium mb-0"><%= campaign.seller.name %></span>
                    <small class="text-muted"><%= time_ago_in_words(review.answer.created_at)%> ago</small>
                  </div>
                    <p><%= review.answer.content %></p>
                </div>
              </div>



              <ul class="list-inline d-flex">
                <li class="list-inline-item">
                  <a class="text-secondary" href="#">
                    17
                    <span class="far fa-thumbs-up ml-1"></span>
                  </a>
                </li>
                <li class="list-inline-item ml-3">
                  <a class="text-secondary" href="#">
                    0
                    <span class="far fa-thumbs-down ml-1"></span>
                  </a>
                </li>
              </ul>
                <!-- End Reply -->
            <% end %>

          </div>
          <!-- End Comment -->
        </div>
<% end %>


